<Window x:Class="gyro1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:gyro1"
        Title="NXT Odometry/Gyro fusion" Height="768" Width="1024" Loaded="Window_Loaded"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Width" Value="48" />
            <Setter Property="Margin" Value="4" />
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" Click="MenuExit_Click">
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <ComboBox x:Name="ComPort" ItemsSource="{Binding ComPorts}" SelectedIndex="0" Width="72" />
            <Button Content="Connect" Style="{StaticResource MenuButton}" Click="Connect_Click" />
            <Button Content="Start" Style="{StaticResource MenuButton}" />
            <Button Content="Abort" Style="{StaticResource MenuButton}" />
            <Button Content="Test" Style="{StaticResource MenuButton}" Click="Test_Click" />
            <Button Content="Fwd" Style="{StaticResource MenuButton}" />
            <Button Content="90" Style="{StaticResource MenuButton}" />
            <Button Content="-90" Style="{StaticResource MenuButton}" />
            <Button Content="180" Style="{StaticResource MenuButton}" />
            <Button Content="Back" Style="{StaticResource MenuButton}" />
            <Slider Minimum=".01" Maximum="1" Value="{Binding DrawScale}" Width="128" />
            <TextBlock Text="{Binding DrawScale}" />
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding State}" />
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="95*"/>
                <ColumnDefinition Width="32*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="240" />
            </Grid.RowDefinitions>

            <local:MyCanvas x:Name="MyCanvas" Grid.Row="0" Grid.ColumnSpan="2">
                <Ellipse Fill="Black" Canvas.Left="0" Canvas.Top="0" Width="10" Height="10" RenderTransform="1 0 0 1 -5 -5" />
            </local:MyCanvas>

            <local:Console Grid.Row="1" />

            <Grid Width="120" Height="120" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,12,12,0">
                <Grid.Effect>
                    <DropShadowEffect/>
                </Grid.Effect>
                <Image Source="Resources/compass.png" />
                <Image Source="Resources/compass_needle.png" RenderTransformOrigin="0.5,0.5" >
                    <Image.RenderTransform>
                            <RotateTransform Angle="{Binding RobotH}"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>

            <GridSplitter Height="5" Grid.Row="1" VerticalAlignment="Top" ResizeDirection="Rows" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" />
        </Grid>
    </DockPanel>
</Window>