<Window x:Class="gyro1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:gyro1"
        Title="{Binding Title}" Height="600" Width="800" Loaded="Window_Loaded">

    <Window.DataContext>
        <local:DataModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Width" Value="48" />
            <Setter Property="Margin" Value="4" />
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" Click="MenuExit_Click">
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <ComboBox x:Name="ComPort" ItemsSource="{Binding ComPorts}" SelectedIndex="0" Width="72" />
            <Button Content="Reset" Style="{StaticResource MenuButton}" Click="Reset_Click" />
            <Button Content="Start" Style="{StaticResource MenuButton}" Click="Start_Click" />
            <Button Content="Abort" Style="{StaticResource MenuButton}" Click="Abort_Click" />
            <Button Content="Test" Style="{StaticResource MenuButton}" Click="Test_Click" />
            <Button Content="Fwd" Style="{StaticResource MenuButton}" Click="Fwd_Click" />
            <Button Content="90" Style="{StaticResource MenuButton}" Click="Turn90_Click" />
            <Button Content="-90" Style="{StaticResource MenuButton}" Click="Turn_Minus90" />
            <Button Content="180" Style="{StaticResource MenuButton}" Click="Turn180_Click" />
            <Button Content="Back" Style="{StaticResource MenuButton}" Click="Back_Click" />
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding State}" />
        </StatusBar>
        <local:Console Height="90" DockPanel.Dock="Bottom" />
        <local:NxtPanel DockPanel.Dock="Right" Margin="2" />
        <Border BorderThickness="0,0,2,0" BorderBrush="Black"   >
            <local:MyCanvas x:Name="MyCanvas" RenderTransformOrigin="0.5, 0.5" >
                
            </local:MyCanvas>
        </Border>
    </DockPanel>
</Window>