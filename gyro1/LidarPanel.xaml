<UserControl x:Class="spiked3.winViz.LidarPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ll="clr-namespace:RpLidarLib;assembly=RpLidar"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ll:LidarCanvas LandmarkBrush="Green" LandmarkSize="8" ClipToBounds="True" Scans="{Binding Scans}" Landmarks="{Binding Landmarks}" 
                                Background="White" >
            <ll:LidarCanvas.AxisPen>
                <Pen Brush="#FF646464"/>
            </ll:LidarCanvas.AxisPen>
            <ll:LidarCanvas.ScanPen>
                <Pen Brush="#FFD0F6FF"/>
            </ll:LidarCanvas.ScanPen>
        </ll:LidarCanvas>

    </Grid>
</UserControl>
