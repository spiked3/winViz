<Window x:Class="gyro1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:gyro1"
        Title="{Binding Title}" Height="600" Width="800" Loaded="Window_Loaded" >
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Width" Value="42" />
            <Setter Property="Margin" Value="4" />
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" Click="MenuExit_Click">
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <ComboBox x:Name="ComPort" ItemsSource="{Binding ComPorts}" SelectedIndex="0" Width="72"/>
            <Button Content="Reset" Style="{StaticResource MenuButton}" Click="Reset_Click" />
            <Button Content="Start" Style="{StaticResource MenuButton}" Click="Start_Click" />
            <Button Content="Stop" Style="{StaticResource MenuButton}" Click="Stop_Click" />
            <Button Content="Test" Style="{StaticResource MenuButton}" Click="Test_Click" />
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding State}" />
        </StatusBar>
        <local:NxtPanel DockPanel.Dock="Right" />
        <Grid>
            <Thumb DragDelta="Thumb_DragDelta">
                <Thumb.Template>
                    <ControlTemplate>
                        <local:MyCanvas />
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
        </Grid>
    </DockPanel>
</Window>